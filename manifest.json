{
    "name": "Epilepsy Safe Viewer",
    "description": "Dims bright flashes of lights over YouTube videos to prevent seizures ",
	"version": "1.0",
    "manifest_version": 3,
	"icons" :{
		"16": "/esv1.png",
		"48": "/esv1.png",
		"128": "/esv1.png"
	},
    "content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*"
			],
			"js": [
				"chromeExt.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	]
  }